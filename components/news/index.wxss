/* components/news/index.wxss */
.news_item {
  padding: 5px;
  background-color: #fff;
  margin: 5px;
}
.news_item::after {
  content: "";
  display: block;
  clear: both;
  visibility: hidden;
  height: 0;
}
.fl_left {
  float: left;
  width: 200px;
}
.fl_right {
  float: right;
}
.fl_right image {
  width: 78px;
  height: 78px;
}

.no_image {
  width: 100%;
  padding: 18px 0;
}